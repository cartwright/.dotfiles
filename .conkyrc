background no
draw_borders no
draw_shades no

default_color D6D6D6
#default_color orange

# Create own window instead of using desktop (required in nautilus)
own_window yes
own_window_transparent yes
own_window_type override
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
maximum_width 175

use_xft yes
xftfont Sans:size=11
xftalpha 0.5

update_interval 1
double_buffer yes

alignment top_right
gap_x 25
gap_y 60


TEXT
${font :bold:size=10}Time: ${font :size=8}${alignr}${time %T}
${font :bold:size=10}Date: ${font :size=8}${alignr}${time %d-%^h-%G}

${font :bold:size=10}Charge: ${font :size=8}${battery_percent}%	${alignr}${battery_bar 10,90}${alignr}${battery_percent}%

${font :bold:size=10}Host: ${font :size=8}${alignr}${nodename}
${font :bold:size=10}User: ${font :size=8}${alignr}${exec whoami}
${font :bold:size=10}Uptime: ${font :size=8}${alignr}$uptime
${font :bold:size=10}Kernel: ${font :size=8}${alignr}$kernel
${font :bold:size=10}Upgrades: ${font :size=8}${alignr}${execi 764 ~/scripts/paclogChecker} packages

${font :bold:size=10}CPU 1: ${font :size=8}${cpu cpu0}%		${alignr}${cpubar cpu0 10,90} $alignr ${freq_g cpu0} Ghz
${font :bold:size=10}CPU 2: ${font :size=8}${cpu cpu1}%		${alignr}${cpubar cpu1 10,90} $alignr ${freq_g cpu1} Ghz
${font :bold:size=10}RAM: ${font :size=8}${memperc}% $alignr${mem} / ${memmax}
${alignr}${memgraph 20,175}

${font :bold:size=10}Root: ${font :size=8}${alignr}${fs_used /} / ${fs_size /}
${alignr}${fs_bar 10,175 /}
${font :bold:size=10}Swap: ${font :size=8}$alignr${swap} / ${swapmax}
${alignr}${fs_bar 10,175 /swap}
${font :bold:size=10}Home: ${font :size=8}${alignr}${fs_used /home} / ${fs_size /home}
${alignr}${fs_bar 10,175 /home}

${font :bold:size=10}Net IP: ${font :size=8}${alignr}${execi 3600 wget http://v4.ipv6-test.com/api/myip.php -q -O -}
${font :bold:size=10}NAT: ${font :size=8}${alignr}${addr enp12s0}
#${if_existing /proc/net/route enp12s0}
${font :bold:size=10}Down: ${font :size=8}${downspeed enp12s0}/s ${alignr}
#${font :bold:size=10}Total: ${font :size=8}${totaldown enp12s0}
${downspeedgraph enp12s0 20,175} ${alignr}
${font :bold:size=10}Up: ${font :size=8}${upspeed enp12s0}/s ${alignr}
#${font :bold:size=10}Total: ${font :size=8}${totalup enp12s0}
${upspeedgraph enp12s0 20,175} ${alignr}
#${else}Network Unavailable${endif}

${font :bold:size=10}Processes: ${font :size=8}${alignr}$processes ($running_processes running)
${font :bold:size=10}Name:	$alignr PID	CPU	${font :size=8}
${top name 1}	$alignr${top pid 1}	${top cpu 1}
${top name 2}	$alignr${top pid 2}	${top cpu 2}
${top name 3}	$alignr${top pid 3}	${top cpu 3}
${top name 4}	$alignr${top pid 4}	${top cpu 4}
